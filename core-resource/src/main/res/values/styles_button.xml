<resources>
    <!--region ButtonBlue-->
    <style name="CommonButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/dimen8dp</item>
        <item name="android:paddingEnd">@dimen/dimen8dp</item>
        <item name="android:paddingTop">@dimen/dimen12dp</item>
        <item name="android:paddingBottom">@dimen/dimen12dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CommonButton.Primary">
        <item name="TRX_backgroundDrawable">buttonPrimary</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="CommonButton.Primary.FontBlack">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="CommonButton.Primary.FontBlackItalic">
        <item name="android:fontFamily">@font/montserrat_blackitalic</item>
        <item name="fontFamily">@font/montserrat_blackitalic</item>
    </style>

    <style name="CommonButton.Primary.FontMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CommonButton.Primary.FontRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CommonButton.Primary.FontBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="CommonButton.Primary.FontSemiBold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>
    <!--endregion ButtonBlue-->

    <!--region ButtonTextOnly-->
    <style name="CommonButton.TextOnly">
        <item name="android:foreground">?attr/defaultRoundRectRippleBackground</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/dimen8dp</item>
    </style>

    <style name="CommonButton.TextOnly.FontBlack">
        <item name="android:fontFamily">@font/montserrat_blackitalic</item>
        <item name="fontFamily">@font/montserrat_blackitalic</item>
    </style>

    <style name="CommonButton.TextOnly.FontBlackItalic">
        <item name="android:fontFamily">@font/montserrat_blackitalic</item>
        <item name="fontFamily">@font/montserrat_blackitalic</item>
    </style>

    <style name="CommonButton.TextOnly.FontMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CommonButton.TextOnly.FontRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CommonButton.TextOnly.FontBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="CommonButton.TextOnly.FontSemiBold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>
    <!--endregion ButtonTextOnly-->

</resources>