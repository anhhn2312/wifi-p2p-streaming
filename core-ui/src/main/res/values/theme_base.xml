<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Ripple-->
        <item name="defaultAppBackground">@drawable/bg_app</item>
        <item name="defaultBorderlessRippleBackground">@drawable/default_borderless_ripple_background</item>
        <item name="defaultRectRippleBackground">@drawable/default_rect_ripple_background</item>
        <item name="defaultRoundRectRippleBackground">@drawable/default_round_rect_ripple_background</item>
        <item name="defaultOvalRippleBackground">@drawable/default_oval_ripple_background</item>
        <item name="defaultTopItemBackground">@drawable/default_top_item_background</item>
        <item name="defaultTopItemBackgroundNoRipple">@drawable/default_top_item_background_no_ripple</item>
        <item name="defaultMiddleItemBackground">@drawable/default_middle_item_background</item>
        <item name="defaultMiddleItemBackgroundNoRipple">@drawable/default_middle_item_background_no_ripple</item>
        <item name="defaultBottomItemBackground">@drawable/default_bottom_item_background</item>
        <item name="defaultBottomItemBackgroundNoRipple">@drawable/default_bottom_item_background_no_ripple</item>
        <item name="defaultFullItemBackground">@drawable/default_full_item_background</item>
        <item name="defaultFullItemBackgroundNoRipple">@drawable/default_full_item_background_no_ripple</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="maskRippleColor">?attr/colorControlHighlight</item>

        <!-- Animation-->
        <item name="defaultInterpolator">@interpolator/fast_out_slow_in</item>

        <item name="defaultPrimaryButtonBackground">@drawable/bg_button_primary</item>
    </style>
</resources>