<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen56dp"
    android:paddingTop="@dimen/dimen44dp"
    android:paddingEnd="@dimen/dimen56dp"
    android:paddingBottom="@dimen/dimen20dp"
    tools:background="#124">

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/dataEmptyTitle"
        style="@style/FontMedium.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/common_data_empty_title"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold" />

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/dataEmptyMessage"
        style="@style/FontMedium.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen12dp"
        android:text="@string/common_data_empty_message"
        android:textSize="@dimen/text_size_13" />
</LinearLayout>