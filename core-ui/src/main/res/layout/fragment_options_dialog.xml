<?xml version="1.0" encoding="utf-8"?>
<com.andyha.coreui.base.ui.widget.MaxHeightLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog"
    android:orientation="vertical"
    android:padding="@dimen/dimen16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIconTitle"
            android:layout_width="@dimen/dimen24dp"
            android:layout_height="@dimen/dimen24dp"
            android:layout_marginRight="@dimen/dimen12dp"
            android:visibility="gone"
            tools:src="@drawable/ic_close_red" />

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/tvTitle"
            style="@style/FontBold.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|top"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"
            tools:text="Unable to connect to Title"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen24dp"
            android:layout_height="@dimen/dimen24dp"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/dimen12dp"
            android:background="?attr/defaultBorderlessRippleBackground"
            android:src="@drawable/ic_close_white"
            tools:visibility="visible" />

    </LinearLayout>

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/tvMessage"
        style="@style/FontRegular.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:gravity="start"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        tools:text="Sample message"
        tools:visibility="visible" />

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/btnOption"
        style="@style/CommonButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen28dp"
        android:text="@string/common_btn_ok"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/llOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen28dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/btnOption1"
            style="@style/CommonButton.TextOnly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="OK"
            tools:visibility="visible" />

        <View
            android:id="@+id/view_option_divider"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="2dp"
            android:visibility="gone" />

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/btnOption2"
            style="@style/CommonButton.TextOnly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="No"
            tools:visibility="visible" />
    </LinearLayout>
</com.andyha.coreui.base.ui.widget.MaxHeightLinearLayout>