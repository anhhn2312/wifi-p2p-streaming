<?xml version="1.0" encoding="utf-8"?>
<com.andyha.coreui.base.ui.widget.MaxHeightLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen20dp"
    android:paddingTop="@dimen/dimen20dp"
    android:paddingEnd="@dimen/dimen20dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/tvTitle"
            style="@style/FontBold.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|top"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"
            tools:text="Sample Title"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen24dp"
            android:layout_height="@dimen/dimen24dp"
            android:layout_gravity="top"
            android:background="?attr/defaultBorderlessRippleBackground"
            android:src="@drawable/ic_close_white"
            tools:visibility="visible" />

    </LinearLayout>

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/tvMessage"
        style="@style/FontRegular.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_marginBottom="@dimen/dimen28dp"
        android:gravity="start"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        tools:text="A sample message"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/llEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen24dp"
        android:orientation="vertical">

        <com.andyha.coreui.base.ui.widget.edittext.BaseEditText
            android:id="@+id/edt1"
            style="@style/FontSemiBold.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            app:disableAnimationErrorMessage="true"
            app:inputType="@integer/edt_type_normal" />

        <com.andyha.coreui.base.ui.widget.edittext.BaseEditText
            android:id="@+id/edt2"
            style="@style/FontSemiBold.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16dp"
            android:digits="1234567890"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:disableAnimationErrorMessage="true"
            app:inputType="@integer/edt_type_phone" />

    </LinearLayout>

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/btnOption"
        style="@style/CommonButton.TextOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen16dp"
        android:text="@string/common_btn_ok"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/llOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen32dp"
        android:layout_marginBottom="@dimen/dimen16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/btnOption1"
            style="@style/CommonButton.TextOnly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="OK"
            tools:visibility="visible" />

        <com.andyha.coreui.base.ui.widget.textview.BaseTextView
            android:id="@+id/btnOption2"
            style="@style/CommonButton.TextOnly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen30dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            tools:text="No"
            tools:visibility="visible" />
    </LinearLayout>
</com.andyha.coreui.base.ui.widget.MaxHeightLinearLayout>